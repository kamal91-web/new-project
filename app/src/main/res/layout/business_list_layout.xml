<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/business_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_business_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/business_icon">
            <TextView
                android:id="@+id/txt_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/overlayActionBar"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/txt_business_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:textColor="@color/overlayBackground"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/txt_business_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textColor="@color/overlayBackground"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/txt_business_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:textColor="@color/overlayBackground"
                android:textSize="14dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>